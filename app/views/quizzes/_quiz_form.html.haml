= form_for @quiz, :remote => true do |f|
  = f.label :name
  = f.text_field :name, :autofocus => true, :placeholder=>'Quiz name'
  = f.label :cost
  = f.number_field :cost
  = f.label 'Enter relevant tags:'
  = text_field_tag :tags
  = f.label 'Score required to pass quiz:'
  = f.number_field :num_pass
  = f.submit 'SAVE', :class => 'button small success'