.row
  .large-12.columns
    %h1 USER PROFILE
    = link_to('Edit profile', edit_user_path(@user))





//USER PROFILE

.row
  .large-1.columns
  .large-3.columns
    = image_tag(@user.image)
    = link_to('Create a quiz', new_quiz_path,  :class => 'button small success radius')

    #map_canvas
      %script
        = "display_map(#{@user.lat}, #{@user.long}, 12)"
        = "add_marker(#{@user.lat}, #{@user.long}, '#{@user.name}');"

  .large-7.columns
    %ul
      %li
        %h3= @user.name
      %li= "Address: #{@user.address}"
      %li= "Occupation: #{@user.occupation}"
      %li= "E-mail: #{@user.email}"
      %li= "Phone: #{@user.phone}"
      %li= "Balance: #{number_to_currency(@user.balance, :precision => 2)}"
  .large-1.columns


// USER CREATED Quizzes

.row
  .large-6.columns
    %h2 My Quizzes History
  .large-6.columns

.row
  .large-10.large-centered.columns
    #quizzes_created
      = render(:partial => 'users/quizzes_created')
    #quizzes_history
      = render(:partial => 'users/quizzes_history')
