.row
  .large-6.large-centered.columns
    - if @auth.blank?
      %h2 Register to Interviewr
    - else
      %h2 Edit your profile
.row
  .large-6.large-centered.columns
    = form_for @user, :html => {:multipart => true} do |f|
      = f.text_field :name, :placeholder => 'Full Name'
      = f.text_field :email, :placeholder => 'Email'
      = f.text_field :phone, :placeholder => 'Phone Number'
      = f.password_field :password, :placeholder => 'Password'
      = f.password_field :password_confirmation, :placeholder => 'Password confirmation'
      = f.text_field :address, :placeholder => 'Home address'
      = f.text_field :occupation, :placeholder => 'Current occupation'
      = f.text_field :balance, :placeholder => 'Opening balance $', :value => number_to_currency(f.object.balance, :precision => 2)
      = f.label :image, 'Upload photo'
      = f.file_field :image, :placeholder => 'Upload a photo'
      %br
      %br
      %br
      - if @auth.blank?
        = f.submit 'Register', :class => 'button small radius success'
        = link_to('Cancel', root_path, :class => 'button small radius alert' )
      - else
        = f.submit 'Update', :class => 'button small radius success'
        = link_to('Cancel', user_path, :class => 'button small radius alert' )


